{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "title" : "Site Config",
  "type" : "object",
  "additionalProperties" : true,
  "properties" : {
    "mts" : {
      "$ref" : "#/definitions/Mts"
    }
  },
  "required" : [ "mts" ],
  "definitions" : {
    "Mts" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "site" : {
          "$ref" : "#/definitions/SiteConfiguration"
        },
        "address" : {
          "$ref" : "#/definitions/AddressConfiguration"
        }
      },
      "required" : [ "site" ]
    },
    "SiteConfiguration" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "displayName" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "type" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "attributes" : {
          "type" : "array",
          "minItems" : 1,
          "items" : {
            "$ref" : "#/definitions/SiteAttributeConfiguration"
          }
        },
        "custom" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/SiteAttributeConfiguration"
          }
        },
        "child" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/SiteConfiguration"
          }
        }
      },
      "required" : [ "name", "displayName", "type", "attributes" ]
    },
    "SiteAttributeConfiguration" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "type" : {
          "type" : "string"
        },
        "displayName" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "validationRegex" : {
          "type" : "string"
        }
      },
      "required" : [ "name", "displayName" ]
    },
    "AddressConfiguration" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "addressType" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/SiteAttributeConfiguration"
          }
        }
      }
    }
  }
}