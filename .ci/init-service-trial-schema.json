{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "title" : "Init Trial Config",
  "type" : "object",
  "additionalProperties" : true,
  "properties" : {
    "mts" : {
      "$ref" : "#/definitions/Mts"
    }
  },
  "required" : [ "mts" ],
  "definitions" : {
    "Mts" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "trial" : {
          "$ref" : "#/definitions/Trial"
        }
      },
      "required" : [ "trial" ]
    },
    "Trial" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "persons" : {
          "type" : "array",
          "minItems" : 1,
          "items" : {
            "$ref" : "#/definitions/Practitioner"
          }
        },
        "sites" : {
          "type" : "array",
          "minItems" : 1,
          "items" : {
            "$ref" : "#/definitions/Site"
          }
        },
        "roles" : {
          "type" : "array",
          "minItems" : 1,
          "items" : {
            "$ref" : "#/definitions/RoleDTO"
          }
        },
        "trialName" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        }
      },
      "required" : [ "persons", "sites", "roles", "trialName" ]
    },
    "Practitioner" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "prefix" : {
          "type" : "string"
        },
        "givenName" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "familyName" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "roles" : {
          "type" : "array",
          "items" : {
            "type" : "string"
          }
        },
        "userAccount" : {
          "type" : "string"
        }
      },
      "required" : [ "givenName", "familyName" ]
    },
    "Site" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "alias" : {
          "type" : "string"
        },
        "siteType" : {
          "type" : "string",
          "pattern" : "^.*\\S+.*$",
          "minLength" : 1
        },
        "address" : {
          "$ref" : "#/definitions/SiteAddress"
        }
      },
      "required" : [ "name", "siteType" ]
    },
    "SiteAddress" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "address1" : {
          "type" : "string"
        },
        "address2" : {
          "type" : "string"
        },
        "address3" : {
          "type" : "string"
        },
        "address4" : {
          "type" : "string"
        },
        "address5" : {
          "type" : "string"
        },
        "city" : {
          "type" : "string"
        },
        "country" : {
          "type" : "string"
        },
        "postcode" : {
          "type" : "string"
        }
      }
    },
    "RoleDTO" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string"
        },
        "permissions" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/PermissionDTO"
          }
        }
      }
    },
    "PermissionDTO" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string"
        }
      }
    }
  }
}